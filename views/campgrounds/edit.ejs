<% include ../partials/header %>
<div class="container">
    <div class="row">    
        <h1 style="text-align:center;"> 
            Edit <%= campground.name %>
        </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="formgroup">
                    <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>" width="50%"><br>
                </div>
                <div class="formgroup">
                    <input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01" width="50%"><br>
                </div>
                <div class="formgroup">
                    <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>" width="50%"><br>
                </div>
                 <div class="formgroup">
                    <input type="text" class="form-control" name="campground[description]" value="<%= campground.description %>" width="50%"><br>
                </div>
                <div class="formgroup">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button><br>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>